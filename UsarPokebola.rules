 public ruleBase UsarPokebola {
		  rule UsarPokebola {
		    declarations
		     	AgenteMapa am;
		    conditions
		    	am.getAgente().getQuantidadePokebolas() > 0;
		    	am.getMapa().getMapa()[am.getAgente().getPosicao().getX()][am.getAgente().getPosicao().getY()].getElemento().ehUmPokemon();
		    actions
		      System.out.println("O agente capturou um pokemon.");
		      am.getAgente().setQuantidadePokebolas(am.getAgente().getQuantidadePokebolas() - 1);
		      am.getAgente().setCustoAcao(-5);
		      modified(am);
		  }
  }
