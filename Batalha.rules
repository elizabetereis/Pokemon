 public ruleBase Batalha {
 
		 rule Perdeu {
		    declarations
		      AgenteMapa am;
		    conditions
		      am.getAgente().isPokemonsRecuperados() == false;
		    actions
		      System.out.println("Você perdeu a batalham.");
		      am.getAgente().setCustoAcao(-1000);
		      modified(am);
		  }
		  
		  rule Ganhou {
		    declarations
		      AgenteMapa am;
		    conditions
		      am.getAgente().isPokemonsRecuperados() == true;
		    actions
		      System.out.println("Você ganhou a batalha");
		      am.getAgente().setCustoAcao(+150);
		      modified(am);
		  }
  }
