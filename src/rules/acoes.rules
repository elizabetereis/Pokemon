 public ruleBase Acoes {
 
		 rule Cima {
		    declarations
		      Agente a;
		      Vector posicaoAtual;
		    conditions
		    	a.getOrientacao() == 1;
		    actions
		      System.out.println("Você andou para cima.");
		      posicaoAtual = a.getPosicao();
		      Vector v = new Vector(posicaoAtual.getX(), posicaoAtual.getY() - 1)
		      a.setPosicao(v);
		      a.setCustoAcao(-1);
		      modified(a);
		  }
		  
		  rule Baixo {
		    declarations
		      Agente a;
		      Vector posicaoAtual;
		    conditions
		    	a.getOrientacao() == 2;
		    actions
		      System.out.println("Você andou para baixo.");
		      posicaoAtual = a.getPosicao();
		      Vector v = new Vector(posicaoAtual.getX(), posicaoAtual.getY() + 1)
		      a.setPosicao(v);
		      a.setCustoAcao(-1);
		      modified(a);
		  }
		  
		  rule Direita {
		   declarations
		      Agente a;
		      Vector posicaoAtual;
		    conditions
		    	a.getOrientacao() == 3;
		    actions
		      System.out.println("Você andou para direita.");
		      posicaoAtual = a.getPosicao();
		      Vector v = new Vector(posicaoAtual.getX() + 1, posicaoAtual.getY())
		      a.setPosicao(v);
		      a.setCustoAcao(-1);
		      modified(a);
		  }
		  
		  rule Esquerda {
		    declarations
		      Agente a;
		      Vector posicaoAtual;
		    conditions
		    	a.getOrientacao() == 4;
		    actions
		      System.out.println("Você andou para esquerda.");
		      posicaoAtual = a.getPosicao();
		      Vector v = new Vector(posicaoAtual.getX() - 1, posicaoAtual.getY())
		      a.setPosicao(v);
		      a.setCustoAcao(-1);
		      modified(a);
		  }
		  
		   rule UsarPokebola {
		    declarations
		      Agente a;
		    conditions
		    	a.getQuantidadePokebolas() > 0;
		    actions
		      System.out.println("Você usou uma Pokebola.");
		      a.setQuantidadePokebolas(a.getQuantidadePokebolas() - 1)
		      a.setCustoAcao(-5);
		      modified(a);
		  }
  }
